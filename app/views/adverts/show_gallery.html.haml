- title 'Gallery'

.page-header
  %h2
    = 'Gallery'
    %small
      = link_to @advert.title, show_advert_path(@advert)

%p.text-center
  - @uploads.each do |upload|
    = link_to image_tag(upload.image.url(:thumb), class: 'img-thumbnail', alt: upload.description), show_gallery_path(@advert, upload.id)

%p.text-center
  = image_tag @selected_image.image.url(:original), class: 'img-rounded'