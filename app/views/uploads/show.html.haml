- title 'Image'

%ul.list-group
  %li.list-group-item.item-heading
    = "Image"
  %li.list-group-item.text-center
    = image_tag @upload.image.url(:original), class: 'img-rounded', style: 'max-width: 100%'

  - unless @upload.description.nil? or @upload.description.empty?
    %li.list-group-item.item-heading
      = "Description"
    %li.list-group-item.text-center
      = raw simple_format @upload.description

= link_to "Back to Advert", show_advert_path(@upload.advert), class: 'btn btn-default btn-sm pull-right'

