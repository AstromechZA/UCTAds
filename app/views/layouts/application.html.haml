!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= "UCTads" + (content_for?(:title) ? " : #{yield(:title)}" : '')
    = stylesheet_link_tag :application, :media => "all"
    = javascript_include_tag :application
    = csrf_meta_tags
    = yield(:head)
  %body
    #wrap
      %nav.navbar.navbar-inverse.navbar-fixed-top
        .container
          .navbar-header
            %button.navbar-toggle{ type: 'button', data: {target: '.navbar-collapse', toggle: 'collapse'} }
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.navbar-brand{:href => "/"}
              %i.fa.fa-mortar-board
              = "UCTAds"
          .collapse.navbar-collapse

            %form.navbar-form.navbar-left.navbar-input-group.custom-form-sm{role: 'search'}
              .form-group
                %input.form-control.input-sm{size: 50, type: 'text', placeholder: 'Search ..'}
              %button.btn.btn-info.btn-sm{type: 'submit'}= "Search"

            %ul.nav.navbar-nav
              %li.navbar-button-li
                = button_to "Post an Ad!", new_advert_path, method: :get, class: "btn btn-success btn-sm navbar-btn"

            %ul.nav.navbar-nav.navbar-right
              %li
                %a item
              %li
                %a item
      #page-wrap.container
        #content-wrap.content
          .row-fluid
            .col-sm-12
              = yield
          .clearfix
    #footer
      .container
        %p.text-center
          %small
            Copyright text and stuff

    %script{src: "http://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"}


