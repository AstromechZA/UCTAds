- title 'Adverts'

.page-header
  %h3
    = "Adverts"

.row
  .col-sm-3
    = nested_categories_tree_plain(@categories)
    %p
      = link_to 'Add advert', new_advert_path
  .col-sm-9
    %table.table.table-bordered
      %thead
        %tr
          %th= "Image"
          %th= "Details"
          %th= "Price"
      %tbody
        - @adverts.each do |advert|
          %tr
            %td
            %td
              = link_to advert.title, advert
            %td
              - if advert.price_type == 'exact'
                = number_to_currency(advert.price, unit: 'R')
              - else
                = Advert::PRICE_TYPES[advert.price_type]
